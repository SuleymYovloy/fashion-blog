.footer
  
  &__title
    text-align center
    font-family 'PT Serif'
    font-style normal
    font-weight bold
    font-size 25px
    line-height 33px
    letter-spacing 2.5px
    color $gray-900
    text-transform uppercase
    padding-bottom 60px

  &__socials
    display flex
    justify-content center
    padding-bottom 40px
    border-bottom 1px solid $gray-200
  
  &__socials-icon  
    border 1px solid $gray-200
    border-radius 50px
    padding 10px
    margin-right 20px
    &:last-child
      margin 0
    &:hover
      background-color $dull-gold    

  &__copyright-text
    font-family 'PT Sans'
    font-style normal
    font-weight normal
    font-size 14px
    line-height 18px
    color $gray-700 
    text-align center 
    padding 30px 0 30px 0


.footer-icon
  fill $gray-900
  width 8px
  height 15px

.footer-main

  &__nav-list
    display flex
    justify-content center
    margin-bottom 30px

  &__nav-link
    font-family 'PT Sans'
    font-style normal
    font-weight normal
    font-size 14px
    line-height 18px
    color $gray-700
    &:hover
      color $dull-gold
      
  &__nav-item
    margin-right 50px
    &:last-child
      margin 0    